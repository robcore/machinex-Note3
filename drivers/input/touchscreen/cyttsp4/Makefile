	-D CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP4\
	-D CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP4_DEVICETREE_SUPPORT\
	-D CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP4_BUTTON\
